<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stori.rule.mapper.SysUserRoleMapper">

    <select id="selectByUserId" resultType="com.stori.rule.entity.SysUserRole">
        SELECT * FROM sys_user_role WHERE user_id = #{userId}
    </select>

    <select id="selectByUserIds" resultType="com.stori.rule.entity.SysUserRole">
        SELECT * FROM sys_user_role WHERE user_id IN
        <foreach collection="userIds" item="userId" open="(" separator="," close=")">
            #{userId}
        </foreach>
    </select>

    <delete id="deleteByUserId">
        DELETE FROM sys_user_role WHERE user_id = #{userId}
    </delete>

</mapper>




