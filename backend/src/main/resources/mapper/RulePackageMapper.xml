<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stori.rule.mapper.RulePackageMapper">

    <select id="selectByCode" resultType="com.stori.rule.entity.RulePackage">
        SELECT * FROM rule_package WHERE code = #{code}
    </select>

    <select id="selectList" resultType="com.stori.rule.entity.RulePackage">
        SELECT * FROM rule_package
        <where>
            <if test="param.code != null and param.code != ''">
                AND code = #{param.code}
            </if>
            <if test="param.name != null and param.name != ''">
                AND name LIKE CONCAT('%', #{param.name}, '%')
            </if>
            <if test="param.status != null">
                AND status = #{param.status}
            </if>
        </where>
        ORDER BY updated_at DESC
    </select>

</mapper>




