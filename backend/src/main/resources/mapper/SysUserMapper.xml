<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stori.rule.mapper.SysUserMapper">

    <select id="selectByUsername" resultType="com.stori.rule.entity.SysUser">
        SELECT * FROM sys_user WHERE username = #{username}
    </select>

    <select id="countByUsername" resultType="long">
        SELECT count(1) FROM sys_user WHERE username = #{username}
    </select>

    <select id="selectByEmail" resultType="com.stori.rule.entity.SysUser">
        SELECT * FROM sys_user WHERE email = #{email}
    </select>

</mapper>



